@using NatuurlikBase.Pages
@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
  </symbol>
  </svg>

  <div id="page-content-wrapper">
@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
        <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
       &nbsp @TempData["success"]

    </div>
 

}
@*<partial name="_Notification" />*@

 <div class="container-fluid">
     <div class="row justify-content-start">
            <div class="col-10 col-sm-10 col-md-10">
            <h2 class="cheading"> All Users</h2>
        </div>
        <div class="col-md-9 col-lg-8">
            <a asp-area="Identity" asp-page="/Account/RegisterUser" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Register New User &nbsp;
            </a>
        </div>
    </div>

        <br /><br />

    <table class="table" id="tblData" style="background-color: #232323">
        <thead>
            <tr>
                <th class="text-light"> First Name </th>
                <th class="text-light"> Surname</th>
                <th class="text-light"> Email</th>
                <th class="text-light"> Phone Number</th>
                <th class="text-light">Action</th>
            </tr>
        </thead>

    </table>
</div>
</div>

 @section Scripts {
<script src="~/js/user.js"></script>
<script src="~/js/notifications.js"></script>

 }



