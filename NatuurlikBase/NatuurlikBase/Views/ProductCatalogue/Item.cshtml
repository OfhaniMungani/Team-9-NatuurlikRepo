                        <button asp-area="" asp-controller="ProductCatalogue" asp-action="Item" class="btn btn-primary btn-block" id="prodbtn"><i class="bi bi-cart2"></i>&nbsp;Add to cart</button>
                    </div>
                </div>
                <div class="col-lg-3 col">
                    <div class="rela card" id="prod">
                        <img class="card-img-top" src="~/images/honey.png" alt="Card image cap">
                        <p class="item">Pure Farm Honey</p>
