@model IEnumerable<NatuurlikBase.Models.Product>

@{
    ViewData["Title"] = "Home Page";
}

@section home {
    <link href="@Url.Content("~/css/home.css")" rel="stylesheet" type="text/css" />
}
 
<div class="d-none d-lg-block">
    <div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
        <ol class="carousel-indicators">
          <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
          <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        </ol>
        <div class="carousel-inner">
          <div class="carousel-item active">
            <img class="d-block w-100" src="~/images/main.png" alt="First slide">
          </div> 
          <div class="carousel-item">
            <img class="d-block w-100" src="~/images/bill.png" alt="Second slide">
          </div>
        </div>
        <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
          <span class="carousel-control-prev-icon" aria-hidden="true"></span>
          <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
          <span class="carousel-control-next-icon" aria-hidden="true"></span>
          <span class="sr-only">Next</span>
        </a>
      </div>
</div> 

<div class="d-lg-none"> 
  <img src="~/images/mobhome.png" id="slogan">
</div>

<div class="coffee">
    <div class="container">
        <div class="row">
            <div class="col-lg-4 col-6" >
                <img src="~/images/coffee.png" id="cof">
            </div>
            <div class="col">
                <h2 id="beans"> MEDIUM/DARK <br> ROASTED <br> COFFEE BEANS </h2>
                <h1 id="rand">R169.99</h1>                   
                <a asp-area="" asp-controller="ProductCatalogue" asp-action="Index" class="btn btn-primary btn-block" id="shop">SHOP NOW</a>
            </div>
        </div>
    </div>
</div>
 
<div class="container" >
    <div class="row justify-content-center" id="products">
       @foreach (var product in Model)
       {   
          @if(product.DisplayProduct == "Yes")
             {
                @if (User.IsInRole(SR.Role_Reseller))
                    { 
                    <div class="col-lg-3 col" >
                        <div class="card" id="prod">
                            @if(@product.QuantityOnHand == 0)
                            {
                                <img src="@product.PictureUrl" class="stock"  alt="Product Image">
                            }
                            else
                            {
                                <img src="@product.PictureUrl" class="card-img-top"  alt="Product Image">
                            }
                            <p class="natitems"><a>@product.Name</a></p>
                            <p class="catprice">R<a>@product.ResellerPrice.ToString("0.00")</a></p>
                            @if(@product.QuantityOnHand == 0)
                            {
                                <a asp-area="" asp-controller="ProductCatalogue" asp-action="Item" asp-route-productId="@product.Id" class="btn btn-primary btn-block" id="prodbtn"><i class="bi bi-info-circle-fill"></i>&nbsp; OUT OF STOCK</a>
                            }
                            else
                            {
                                <a asp-area="" asp-controller="ProductCatalogue" asp-action="Item" asp-route-productId="@product.Id" class="btn btn-primary btn-block" id="prodbtn"><i class="bi bi-info-circle-fill"></i>&nbsp;View Product</a>
                            }
                          </div>
                    </div>
                }
                else
                {
                     <div class="col-lg-3 col" >
                        <div class="card" id="prod">
                            @if(@product.QuantityOnHand == 0)
                            {
                                <img src="@product.PictureUrl" class="stock"  alt="Product Image">
                            }
                            else
                            {
                                <img src="@product.PictureUrl" class="card-img-top"  alt="Product Image">
                            }
                            <p class="natitems"><a>@product.Name</a></p>
                            <p class="catprice">R<a>@product.CustomerPrice.ToString("0.00")</a></p>
                            @if(@product.QuantityOnHand == 0)
                            {
                                <a asp-area="" asp-controller="ProductCatalogue" asp-action="Item" asp-route-productId="@product.Id" class="btn btn-primary btn-block" id="prodbtn"><i class="bi bi-info-circle-fill"></i>&nbsp; OUT OF STOCK</a>
                            }
                            else
                            {
                                <a asp-area="" asp-controller="ProductCatalogue" asp-action="Item" asp-route-productId="@product.Id" class="btn btn-primary btn-block" id="prodbtn"><i class="bi bi-info-circle-fill"></i>&nbsp;View Product</a>
                            }
                          </div>
                    </div>                   
                }

                }
            }
    </div>
</div>

<div class="d-none d-lg-block"> 
  <img src="~/images/slogan.png" id="slogan">
</div>

<div class="d-lg-none"> 
  <img src="~/images/nuts.png" id="slogan">
</div>

