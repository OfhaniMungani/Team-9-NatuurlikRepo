@model IEnumerable<NatuurlikBase.Models.ReturnReason>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div id="page-content-wrapper">
@if (TempData["AlertMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
        @TempData["AlertMessage"]

    </div>

}

 <div class="container-fluid">
     <div class="row justify-content-start">
            <div class="col-10 col-sm-10 col-md-10">
            <h2 class="cheading">Return Reason List</h2>
		</div>
        <div class="col-md-9 col-lg-8">
            <a asp-controller="ReturnReason" asp-action="Create" class="btn btn-success">
               <i class="bi bi-plus-circle"></i> &nbsp; Create New Return Reason
			</a>
		</div>
	</div>
      <br /><br />
        <table class="table" id="tblData">
            <thead style="background-color: #232323">
                <tr>
                    <th class="text-light">
                        @Html.DisplayNameFor(model => model.ReturnReasonName)
                    </th>
                    <th class="text-light">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model) {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.ReturnReasonName)
                            </td>
                            <td>
                                <a asp-action="Edit" asp-route-id="@item.Id"  class="btn btn-sm editbtn"> <i class="bi bi-pencil-square"></i>&nbsp; Edit</a> 
             
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm deletebtn"> <i class="bi bi-trash-fill"></i>&nbsp; Delete</a>
                            </td>
                        </tr>
                }
            </tbody>
        </table>
    </div>
</div>


