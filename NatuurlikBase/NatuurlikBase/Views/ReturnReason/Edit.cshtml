@model NatuurlikBase.Models.ReturnReason

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml"; 
}

 <body id="body">
    <div id="page-content-wrapper">
          @if (ViewBag.Error == null)
                {
    @using (Html.BeginForm(new { @id = "country" }))
    {
        @Html.AntiForgeryToken()

            <div>
              
                    <div class="card">
                        <div class="card-header" style="background-color: #F2F2F2">
                    <h5>Update Return Reason</h5>
                </div>

                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(model =>model.ReturnReasonName , htmlAttributes: new { @class = "required" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.ReturnReasonName, new { htmlAttributes = new { @class = "form-control", @placeholder ="Water damage"} })
                            @Html.ValidationMessageFor(model => model.ReturnReasonName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                        <div class="form-actions col-md-10">
                            <input type="button" value="Update" class="btn btn-success" style="width:150px;" data-toggle="modal" data-target="#exampleModal" />
                            <button type="button" class="btn btn-outline-dark" style="width:150px;" onclick="location.href='@Url.Action("Index", "Countries")'">
                                Cancel
                            </button>            
                    </div>
                </div>
            </div>
        
        </div>
        <div class="modal fade" id="exampleModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                    <div class="modal-body">
                        <h6 class="col-md-10"> 
                       Confirm Return Reason Details
                    </h6>
                    </div>

                    <div class="modal-footer border-0">
                        <div class="form-actions no-color">
                            <input type="submit" value="Confirm" class="btn btn-success" style="width:150px;"/> 
                            <button type="button" class="btn btn btn-outline-dark" data-dismiss="modal" style="width:150px;">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
   
    }
        }
             <div class="modal fade" id="exampleModal1"  data-bs-backdrop="static" data-bs-keyboard="false">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header  border-0">
                       

                    </div>
                      <h6 class="col-md-10">
                   Return Reason Already Exists
                </h6>

                    <div class="modal-footer  border-0">
                        <div class="form-actions no-color">
                            <input type="button" value="Okay" class="btn btn-outline-dark" data-bs-dismiss="modal"  onclick="location.href='@Url.Action("Index", "ReturnReason")'"/>

                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
     
    </body>
@section Scripts {
  

     @if (ViewBag.ReturnError != null)
    {
        <script>



            $(function () {
                $("#exampleModal1").modal("show");
             
            });


        </script>
    }

    @if (ViewBag.CountryConfirmation != null)
    {
        <script>



            $(function () {
                $("#exampleModal").modal("show");
            });


        </script>
    }
}
