@model NatuurlikBase.Models.ReturnReason

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-content-wrapper">
                @if (ViewBag.Error == null)
            {
    <form method="post">	
        <div>

                <div class="card">
                    <div class="card-header" style="background-color: #F2F2F2">
                    <h5>Add Return Reason</h5>
                </div>
                <div class="card-body">
		    @*<div asp-validation-summary="All"></div>*@
		    <div class="col-md-10">
			    <label asp-for="ReturnReasonName" class="required"></label>
			    <input asp-for="ReturnReasonName" class="form-control"placeholder ="Water damage" />
			    <span asp-validation-for="ReturnReasonName" class="text-danger"></span>
            <br />
            <div>
		        <button type="submit" class="btn btn-success" data-toggle="modal" style="width:150px">Create</button>
		        <a asp-controller="ReturnReason" asp-action="Index" class="btn btn-outline-dark" style="width:150px">
			        Cancel
		        </a>
            </div>	
            </div>
	    </div>
         </div>
       
            </div>
	   
    </form>
      }
            <div class="modal" id="exampleModal1" data-bs-backdrop="static" data-bs-keyboard="false" >
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0">
                       

                    </div>
                    <h6 class="col-md-10">
                       Return Reason Already Exists
                    </h6>

                    <div class="modal-footer border-0">
                        <div class="form-actions no-color">
                            <input type="button" value="Okay" class="btn btn-outline-dark" data-bs-dismiss="modal" onclick="location.href='@Url.Action("Index", "ReturnReason")'" />

                        </div>
                    </div>

                </div>
            </div>
        </div>
</div>
@section Scripts{
	
	 
      @if (ViewBag.ReturnError != null)
    {
        <script>



            $(function () {
                $("#exampleModal1").modal("show");
            });


        </script>
    
    }
}


