@model ProductCategory

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-content-wrapper">
<form method="post">

	<div class="card">
		<div class="card-header" style="background-color: #F2F2F2">
			<h5>Add Product Category</h5>
		</div>
        <div class="card-body">
		@*<div asp-validation-summary="All"></div>*@
		<div class="col-md-10">
			<label asp-for="Name" class="required"></label>
			<input asp-for="Name" class="form-control" placeholder = "Grounded Coffee"/>
			<span asp-validation-for="Name" class="text-danger"></span>
        
            <br />
            <div>
		        <button type="submit" class="btn btn-success" data-toggle="modal" style="width:150px">Create</button>
		        <a asp-controller="ProductCategory" asp-action="Index" class="btn btn-outline-dark" style="width:150px">
			        Cancel
		        </a>
            </div>
		</div>
		</div>
	</div>

	 <div class="modal" id="exampleModal1" >
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close" id="b1">
                        <span aria-hidden="true">&times;</span>
                    </button>

                </div>
                <h6 class="col-md-10">
                   Product Category already exists!
                </h6>

                <div class="modal-footer border-0">
                    <div class="form-actions no-color">
                        <input type="button" value="Okay" class="btn btn-outline-dark" data-bs-dismiss="modal" 
                        onclick="location.href='@Url.Action("Index", "ProductCategory")'"/>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>
</div>

@section Scripts{
	
	 
      @if (ViewBag.Error != null)
    {
        <script>



            $(function () {
                $("#exampleModal1").modal("show");
            });


        </script>
    
    }
}
