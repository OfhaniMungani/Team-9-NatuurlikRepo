@model Supplier

@{
    Layout = "~/Views/Shared/_AdminLayout.cshtml";    
}

<div id="page-content-wrapper">
<div>
            <div class="card">
                <div class="card-header" style="background-color: #F2F2F2">
                    <h5>Delete Supplier Details</h5>
                </div>
<div>
    
     <div class="card-body">
        <div class="deldetails">
            <div class="col">
                <label> <strong>Name :</strong>  @Html.DisplayFor(model => model.Name)</label> 
            </div>  
            <div class="col">
                <label> <strong>Surname :</strong>  @Html.DisplayFor(model => model.Surname)</label> 
            </div> 
            <div class="col">
                <label> <strong>Company Name :</strong>  @Html.DisplayFor(model => model.CompanyName)</label> 
            </div> 
            <div class="col">
                <label> <strong>Email Address :</strong>  @Html.DisplayFor(model => model.EmailAddress)</label> 
            </div> 
            <div class="col">
                <label> <strong>Phone Number :</strong>  @Html.DisplayFor(model => model.PhoneNumber)</label> 
            </div> 
            <div class="col">
                <label> <strong>Street Address :</strong>  @Html.DisplayFor(model => model.StreetAddress)</label> 
            </div>  
            <div class="col">
                <label> <strong>Country :</strong>  @Html.DisplayFor(model => model.Country.CountryName)</label> 
            </div>  
            <div class="col">
                <label> <strong>Province :</strong>  @Html.DisplayFor(model => model.Province.ProvinceName)</label> 
            </div>  
            <div class="col">
                <label> <strong>City :</strong>  @Html.DisplayFor(model => model.City.CityName)</label> 
            </div>  
            <div class="col">
                <label> <strong>Suburb :</strong>  @Html.DisplayFor(model => model.Suburb.SuburbName)</label> 
            </div>  
        </div>
            <div class="col">
               <button type="submit"  class="btn btn-danger" data-toggle="modal" style="width:150px;" data-target="#exampleModal"> Delete </button>            
               <a asp-controller="Supplier" asp-action="Index" class="btn btn-outline-dark" style="width:150px;"> Cancel </a>
            </div>
</div>

       </div>
                </div>
            </div>
             <div class="modal fade" id="exampleModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                    <div class="modal-body">
                        <h6 class="col-md-10"> 
                       Confirm Supplier Deletion
                    </h6>
                    </div>

                    <div class="modal-footer border-0">
                         <form asp-action="Delete">
                        <input type="hidden" asp-for="Id" />
                        <div class="form-actions no-color">
                            <input type="submit" value="Confirm" class="btn btn-danger" style="width:150px;"/> 
                            <button type="button" class="btn btn btn-outline-dark" data-dismiss="modal" style="width:150px;">Close</button>
                        </div>
                              
                    </form>
                    </div>

                </div>
            </div>
        </div>

</div>



 @section scripts{
   
    @if (ViewBag.Confirmation != null)
    {
        <script>



            $(function () {
                $("#exampleModal").modal("show");
            });


        </script>
    }
}