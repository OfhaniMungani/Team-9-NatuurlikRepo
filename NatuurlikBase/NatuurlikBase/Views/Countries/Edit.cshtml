@model NatuurlikBase.Models.Country

@{
    ViewData["Title"] = "Edit";
   
}

 <body id="body">
    @using (Html.BeginForm(new { @id = "country" }))
    {
        @Html.AntiForgeryToken()

        <div class="shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card">
                <div class="card-header text-white" style="background-color: #292b2c">
                    <h5>Update Country</h5>
                </div>

                <div class="card-body">
                    <div class="form-group">
                        @Html.LabelFor(model =>model.CountryName , htmlAttributes: new { @class = "control-label col-md-2" })
                        @Html.HiddenFor(model => model.Id)
                        <div class="col-md-10">
                            @Html.EditorFor(model => model.CountryName, new { htmlAttributes = new { @class = "form-control" } })
                            @Html.ValidationMessageFor(model => model.CountryName, "", new { @class = "text-danger" })
                        </div>
                    </div>
                        <div class="form-actions no-color col-md-2">
                            <input type="button" value="Update" class="btn btn-outline-dark" data-toggle="modal" data-target="#exampleModal" />
                            <button type="button" class="btn btn-outline-dark"  onclick="location.href='@Url.Action("Index", "Countries")'">
                                Cancel
                            </button>            
                    </div>
                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                    <div class="modal-body">
                        <h6 class="col-md-10"> 
                       Confirm Country Details
                    </h6>
                    </div>

                    <div class="modal-footer border-0">
                        <div class="form-actions no-color">
                            <input type="submit" value="Confirm" class="btn btn-outline-dark" style="width:150px;"/> 
                            <button type="button" class="btn btn btn-outline-dark" data-dismiss="modal" style="width:150px;">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>
        <div class="modal fade" id="exampleModal1">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header  border-0">
                        <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close" id="b1">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                      <h6 class="col-md-10">
                    Country Already Exist On The Database
                </h6>

                    <div class="modal-footer  border-0">
                        <div class="form-actions no-color">
                            <input type="button" value="Okay" class="btn btn-outline-dark" data-bs-dismiss="modal" onclick="location.href='@Url.Action("Index", "Countries")'" />

                        </div>
                    </div>

                </div>
            </div>
        </div>
    }
    </body>
@section Scripts {
  

     @if (ViewBag.CountryError != null)
    {
        <script>



            $(function () {
                $("#exampleModal1").modal("show");
                $("#b1").modal("hide");
            });


        </script>
    }

    @if (ViewBag.CountryConfirmation != null)
    {
        <script>



            $(function () {
                $("#exampleModal").modal("show");
            });


        </script>
    }
}
