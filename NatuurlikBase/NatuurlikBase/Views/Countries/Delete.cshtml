@model NatuurlikBase.Models.Country

@{
    ViewData["Title"] = "Delete";
 
}

<div class="shadow-lg p-3 mb-5 bg-white rounded">
            <div class="card">
                <div class="card-header text-white" style="background-color: #292b2c">
                    <h5>Delete Country Details</h5>
                </div>
<div>
    
     <div class="card-body">
    <dl class="row">
        <dt class = "col-sm-1">
            @Html.DisplayNameFor(model => model.CountryName) :
        </dt>
        <dd>
            @Html.DisplayFor(model => model.CountryName)
        </dd>
    </dl>
    
   
       <button type="submit"  class="btn btn-outline-dark" data-toggle="modal" style="width:150px;" data-target="#exampleModal"> Delete </button>
            
            <a asp-controller="Countries" asp-action="Index" class="btn btn-outline-dark" style="width:150px;"> Cancel </a>
 
</div>
       </div>
                </div>
            </div>
             <div class="modal fade" id="exampleModal">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                    <div class="modal-body">
                        <h6 class="col-md-10"> 
                       Confirm Country Deletion
                    </h6>
                    </div>

                    <div class="modal-footer border-0">
                         <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
                        <div class="form-actions no-color">
                            <input type="submit" value="Confirm" class="btn btn-outline-dark" style="width:150px;"/> 
                            <button type="button" class="btn btn btn-outline-dark" data-dismiss="modal" style="width:150px;">Close</button>
                        </div>
                              
    </form>
                    </div>

                </div>
            </div>
        </div>
 @section scripts{
   
    @if (ViewBag.CountryConfirmation != null)
    {
        <script>



            $(function () {
                $("#exampleModal").modal("show");
            });


        </script>
    }
}