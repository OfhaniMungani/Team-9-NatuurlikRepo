@model NatuurlikBase.Models.Country

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
 
}

<div id="page-content-wrapper">
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
        @if (ViewBag.CountryError == null)
        {
            <div>
                <div class="card">
                    <div class="card-header" style="background-color: #F2F2F2">
                        <h5>Country</h5>
                    </div>
                    <div class="card-body">
                        @*  <div asp-validation-summary="All"></div>*@
                        <div class="col-md-10">
                            <label asp-for="CountryName"> Name </label>
                            <input asp-for="CountryName" class="form-control "/>
                            <span asp-validation-for="CountryName" class="text-danger"></span>


                            <br />

                            <div>
                                <button type="submit" onclick="return ValidateInput()" class="btn btn btn-success" data-toggle="modal" style="width:150px;"> Create </button>            
                                <a asp-controller="Countries" asp-action="Index" class="btn btn-outline-dark" style="width:150px;"> Cancel </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="modal" id="exampleModal1"  data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                   

                </div>
                <h6 class="col-md-10">
                    Country Name Already Exists
                </h6>

                <div class="modal-footer border-0">
                    <div class="form-actions no-color">
                        <input type="button" value="Okay" class="btn btn-outline-dark" data-bs-dismiss="modal" onclick="location.href='@Url.Action("Index", "Countries")'" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
     }       
      @if (ViewBag.CountryError != null)
    {
        <script>

            $(function () {
                $("#exampleModal1").modal("show");
            });
        </script>   
    }        
}
