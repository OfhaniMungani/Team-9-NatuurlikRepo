@model NatuurlikBase.Models.Country

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
 
}
 <svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
  <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
  </symbol>
  <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z"/>
  </symbol>
  <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z"/>
  </symbol>
</svg>


<div id="page-content-wrapper">

      <form asp-controller="Import" asp-action="country" method="post" enctype="multipart/form-data">
        
          @if (TempData["upload"] != null)
        {
             <div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill"/></svg>
               &nbsp @TempData["upload"]
            </div>  }@if (TempData["x"] != null)
        {
             <div class="alert alert-warning alert-dismissible fade show" role="alert" id="success-alert">
                <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#exclamation-triangle-fill"/></svg>
               &nbsp @TempData["x"]
            </div>  }
             <div class="card">
                <div class="card-header" style="background-color: #F2F2F2">
                    <h5>Import Countries
                       
                    </h5>
                </div>
                <div class="card-body">
                    <div class="col-md-3">   
                 
                        <div class="form-group"><input type="file" name="postedFile" class="required"/></div>
                                    
                       <button type="button" class="btn btn-success" data-toggle="modal" data-target="#exampleModal2" style="width:150px">Import</button>  
                      </div>
                </div>
            </div>
           
       	 <div class="modal fade" id="exampleModal2">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header border-0">
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>

                    </div>
                    <div class="modal-body">
                        <h6 class="col-md-10"> 
                       Are you sure you want to Import this file?
                    </h6>
                    </div>

                    <div class="modal-footer border-0">
                        <div class="form-actions no-color">
                            <input type="submit" value="Confirm" class="btn btn-success" style="width:150px;"/> 
                            <button type="button" class="btn btn btn-outline-dark" data-dismiss="modal" style="width:150px;">Close</button>
                        </div>
                    </div>

                </div>
            </div>
        </div>

    </form>
<form method="post" asp-action="Create" enctype="multipart/form-data">
    <input asp-for="Id" hidden />
        @if (ViewBag.CountryError == null)
        {
            <div>
                <div class="card">
                    <div class="card-header" style="background-color: #F2F2F2">
                        <h5>Country</h5>
                    </div>
                    <div class="card-body">
                        @*  <div asp-validation-summary="All"></div>*@
                        <div class="col-md-10">
                            <label asp-for="CountryName" class="required"> Name </label>
                            <input asp-for="CountryName" class="form-control "placeholder ="South Africa"/>
                            <span asp-validation-for="CountryName" class="text-danger"></span>


                            <br />

                            <div>
                                <button type="submit" onclick="return ValidateInput()" class="btn btn btn-success" data-toggle="modal" style="width:150px;"> Create </button>            
                                <a asp-controller="Countries" asp-action="Index" class="btn btn-outline-dark" style="width:150px;"> Cancel </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
        <div class="modal" id="exampleModal1"  data-bs-backdrop="static" data-bs-keyboard="false">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <div class="modal-header border-0">
                   

                </div>
                <h6 class="col-md-10">
                    Country Name Already Exists
                </h6>

                <div class="modal-footer border-0">
                    <div class="form-actions no-color">
                        <input type="button" value="Okay" class="btn btn-outline-dark" data-bs-dismiss="modal" onclick="location.href='@Url.Action("Index", "Countries")'" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
     }       
        <script src="~/js/notifications.js"></script>
      @if (ViewBag.CountryError != null)
    {
        <script>

            $(function () {
                $("#exampleModal1").modal("show");
            });
        </script>   
    }        
}
