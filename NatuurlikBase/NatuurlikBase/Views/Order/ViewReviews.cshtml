@model IEnumerable<OrderReview>

@if (User.IsInRole(SR.Role_Admin) || User.IsInRole(SR.Role_SA))
{

    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";

}
else
{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}



<svg xmlns="http://www.w3.org/2000/svg" style="display: none;">
    <symbol id="check-circle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0zm-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z" />
    </symbol>
    <symbol id="info-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8 16A8 8 0 1 0 8 0a8 8 0 0 0 0 16zm.93-9.412-1 4.705c-.07.34.029.533.304.533.194 0 .487-.07.686-.246l-.088.416c-.287.346-.92.598-1.465.598-.703 0-1.002-.422-.808-1.319l.738-3.468c.064-.293.006-.399-.287-.47l-.451-.081.082-.381 2.29-.287zM8 5.5a1 1 0 1 1 0-2 1 1 0 0 1 0 2z" />
    </symbol>
    <symbol id="exclamation-triangle-fill" fill="currentColor" viewBox="0 0 16 16">
        <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2z" />
    </symbol>
</svg>


<div id="page-content-wrapper">
    @if (TempData["success"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Success:"><use xlink:href="#check-circle-fill" /></svg>
            &nbsp @TempData["success"]

        </div>


    }
    @if (TempData["NextCreation"] != null)
    {

        <div class="alert alert-info alert-dismissible d-flex align-items-center fade show">
            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Info:"><use xlink:href="#info-fill" /></svg>
            <strong>&nbsp Suggestion - &nbsp </strong>  Click &nbsp<a asp-controller="Cities" asp-action="Create" class="alert-link"> Here</a>&nbsp to add a new city
            <button type="button" class="close" data-bs-dismiss="alert" aria-label="Close"> <span aria-hidden="true">&times;</span></button>
        </div>

    }
    @if (TempData["Delete"] != null)
    {
        <div class="alert alert-warning  alert-dismissible fade show" role="alert" id="success-alert">

            <svg class="bi flex-shrink-0 me-2" width="24" height="24" role="img" aria-label="Warning:"><use xlink:href="#exclamation-triangle-fill" /></svg>
            &nbsp @TempData["Delete"]

        </div>


    }


    <div class="container-fluid">
        <div class="d-flex-column justify-content-between justify-content-start">
            <div class="col-10 col-sm-10 col-md-10 p-2">
                @if (User.IsInRole(SR.Role_Admin) || User.IsInRole(SR.Role_SA))
                {
                     <h2 class="cheading"> Order Reviews</h2>
                }
                else
                {
                    <h2 class="cheading">My Order Reviews</h2>
                }
                <br /><br />

                <table class="table" id="tblData" style="background-color: #232323">
                    <thead>
                        <tr>
                            <th class="text-light">
                              Order Reviews List
                            </th>
                           
                            
                           
                        </tr>
                    </thead>
               
                          <tbody>
                        @foreach (var obj in Model)
                        {
                            <tr>
                                <td>
                                      <div class="card-body"> 
                              <p><i> @obj.order.FirstName @obj.order.Surname  @obj.order.ApplicationUser  @obj.LoggedDate</i></p>
                                 <p><i> Order Number: @obj.OrderId Order Rating: <strong>@obj.Rating</strong> </i></p>
                                  <div class="card">
                                        <div class="card-header">
                                        <div><strong>@obj.ReviewReason.Name</strong></div>  
                                        </div>
                                     <div class="card-body">
                                    <div>  @obj.Description</div>
                                    </div>
                                    </div>
                                       <br/>
                                @if (User.IsInRole(SR.Role_Admin) || User.IsInRole(SR.Role_SA))
                                {
                                   

                                     
                                        <div class="btn-group" role="group">
                                            <a href="/Order/Detail?orderId=@obj.order.Id" class="btn btn-sm editbtn"> View Order</a>
                                        </div>
                                    
                                }
                                else
                                {
                                     
                                        <div class="btn-group" role="group">
                                            <a href="/Order/QueryDetail?queryId=@obj.Id" class="btn btn-sm editbtn"> <i class="bi bi-pencil-square"></i>&nbsp; View</a>
                                        </div>
                                   
                                }
                                </div>
                                </td>


                             

                            </tr>
                        }
                        </tbody>
                    
                </table>
            </div>
        </div>
        @section Scripts {
            <script src="~/js/notifications.js"></script>
            <script>
                var dataTable;
                $(document).ready(function() {
                    dataTable = $("#tblData").DataTable({


                    });
                })

            </script>
        }

            @section Styles {
            <link href="@Url.Content("~/css/orderfilters.css")" rel="stylesheet" type="text/css" />
        }
