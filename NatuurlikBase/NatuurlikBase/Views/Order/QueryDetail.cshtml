@model NatuurlikBase.Models.OrderQuery

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-content-wrapper">

    <form method="post">
        <div>
            @if (ViewBag.Error == null)
            {

                <div class="card">
                    <div class="card-header" style="background-color: #F2F2F2">
                        <h5>Order Query Overview</h5>
                    </div>
                    <div class="card-body">
                        @*<div asp-validation-summary="All"></div>*@


                        <div class="row col">
                        </div>

                        <div class="form-group">
                            <label asp-for="OrderId" class="control-label">Order Number:</label>
                            <input asp-for="OrderId" class="form-control col-md-10" readonly></input>
                        </div>

                        <div class="form-group">
                            <label asp-for="QueryReason.Name" class="control-label"> Query Reason:</label>
                            <input asp-for="QueryReason.Name" class="form-control col-md-10" readonly></input>
                        </div>
                        <div class="form-group">
                            <label asp-for="Description" class="control-label">Description:</label>
                            <textarea asp-for="Description" class="form-control col-md-10" readonly></textarea>
                        </div>

                        @if(Model.QueryFeedback != null)
                        {
                          <div class="form-group">
                          <label asp-for="QueryFeedback" class="control-label"> Feedback from Natuurlik:</label>
                          <textarea asp-for="QueryFeedback" class="form-control col-md-10" readonly></textarea>
                        </div>
                        }
                      

                    </div>
                 

            </div>
            <br />
            <br />

            <a asp-controller="Order" asp-action="ViewQueries" class="btn btn-outline-dark" style="width:150px">
                Back
            </a>
            }

</div>

    </form>
</div>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
    @if (ViewBag.Error != null)
    {
        <script>



            $(function() {
                $("#exampleModal1").modal("show");
                $("#b1").modal("hide");
            });


        </script>
    }

    @if (ViewBag.Confirmation != null)
    {
        <script>



            $(function() {
                $("#exampleModal").modal("show");
            });


        </script>
    }
}

