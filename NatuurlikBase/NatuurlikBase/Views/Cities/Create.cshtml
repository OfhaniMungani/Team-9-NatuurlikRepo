@model NatuurlikBase.Models.City

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div id="page-content-wrapper">
<div>
        @if (ViewBag.Error == null)
        {
            <div class="card">

                <div class="card-header" style="background-color: #F2F2F2">
                    <h5>Add City</h5>
                </div>
                <div class="card-body">
                    <div class="col-md-10">
                        <form asp-action="Create">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group">
                                <label asp-for="CityName" class="control-label"></label>
                                <input asp-for="CityName" class="form-control" placeholder ="Pretoria"/>
                                <span asp-validation-for="CityName" class="text-danger"></span>
                            </div>
                            <div class="form-group">


                                <label asp-for="ProvinceId" class="control-label"></label>
                                <select asp-for="ProvinceId" class ="form-control" asp-items="ViewBag.ProvinceId"> <option disabled selected>- Select Province -</option></select>
                            </div>
                            <button type="submit" class="btn btn-success" data-toggle="modal" style="width:150px">Create</button>
                            <a asp-controller="Cities" asp-action="Index" class="btn btn-outline-dark" style="width:150px">
                                Cancel
                            </a>

                          
                        </form>
                    </div>
                </div>
            </div>
        }
    </div>
      <div class="modal" id="exampleModal1" data-bs-backdrop="static" data-bs-keyboard="false" >
                                <div class="modal-dialog modal-dialog-centered">
                                    <div class="modal-content">
                                        <div class="modal-header border-0">


                                        </div>
                                        <h6 class="col-md-10">
                                            City Already Exists
                                        </h6>

                                        <div class="modal-footer border-0">
                                            <div class="form-actions no-color">
                                                <input type="button" value="Okay" class="btn btn-outline-dark" data-bs-dismiss="modal" onclick="location.href='@Url.Action("Index", "Cities")'"/>

                                            </div>
                                        </div>

                                    </div>
                                </div>
                            </div>
</div>     

@section Scripts{
	
	 @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
      @if (ViewBag.Error != null)
    {
        <script>



            $(function () {
                $("#exampleModal1").modal("show");
            });


        </script>
    
    }
}


