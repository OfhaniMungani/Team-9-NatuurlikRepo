@model NatuurlikBase.ViewModels.SuburbVM

<form method="post" asp-action="Upsert" enctype="multipart/form-data">
    <input asp-for="Suburb.Id" hidden />


    <div class="col-10">
         <div class="border p-3 mt-4">
        <div class="col-12 pb-2">
            <h2 class="text-primary">@(Model.Suburb.Id!=0?"Update": "Create") Suburb Details</h2>
            <hr />
        </div>
      @*  <div asp-validation-summary="All"></div>*@
        <div class="mb-3">
            <label asp-for="Suburb.SuburbName"> Name </label>
            <input asp-for="Suburb.SuburbName" class="form-control" />
            <span asp-validation-for="Suburb.SuburbName" class="text-danger"></span>
        </div>

        <div class="mb-3">
            <label asp-for="Suburb.PostalCode"> Postal Code </label>
            <input asp-for="Suburb.PostalCode" class="form-control" />
            <span asp-validation-for="Suburb.PostalCode" class="text-danger"></span>
        </div>

     

        <div class="mb-3 col-6">
            <label asp-for="Suburb.CityId"> City  </label>
            <select asp-for="Suburb.CityId" asp-items="@Model.CityList" class="form-select">
                <option disabled selected>-- Select a City --</option>
            </select>
            <span asp-validation-for="Suburb.CityId" class="text-danger"></span>
        </div>

     
        <div class="container text-end">
         @if(Model.Suburb.Id!=0)
            {
                <button type="submit" class="btn btn-success" style="width:150px;"> Update </button>
            }
            else
            {
                 <button type="submit" onclick="return ValidateInput()" class="btn btn-success" style="width:150px;"> Create </button>
            }
            <a asp-controller="Suburb" asp-action="Index" class="btn btn-primary" style="width:150px;"> Back </a>
       
       
        </div>
       

    </div>
   
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
     }
     

    
     <script>
 
    </script>
    }