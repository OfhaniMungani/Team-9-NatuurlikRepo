@page
@model AccessDeniedModel
@{
    ViewData["Title"] = "Access denied";
}

  <div class="container error">
          <div class="row">
              <div class="col-md-6 d-none d-lg-block">
                  <img class="errorimg" src="~/images/403.png">
              </div>
              <div class="col-md-6">

                  <p class="errorHeading">403</p>
                  <h1 class="errorSub">Access Denied</h1>
                  <p>
                    You do not have access to this resource                               
                  </p>
                <div class="row justify-content-center">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary btn-block" id="itembtn" style="width:300px">Go to Homepage</a>
                </div> 
              </div>
          </div>         
  </div> 
