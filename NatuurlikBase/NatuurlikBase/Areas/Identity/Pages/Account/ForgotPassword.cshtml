@page
@model ForgotPasswordModel

@section account {
    <link href="@Url.Content("~/css/account.css")" rel="stylesheet" type="text/css" />
}

@if (TempData["success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert" id="success-alert">
        @TempData["success"]
    </div>
}

<div class="container">
    <div class="row justify-content-center" id="res">
        <div class="card col-md-4">
            <form method="post">
                <h2 class="head">FORGOT <br /> PASSWORD</h2>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating">
                    <label asp-for="Input.Email" class="form-label required"></label>
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" placeholder="example@gmail.com"/>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <button id="reset" type="submit" class="btn btn-primary btn-block">Reset Password</button>
            </form>
        </div>
    </div>
</div>


