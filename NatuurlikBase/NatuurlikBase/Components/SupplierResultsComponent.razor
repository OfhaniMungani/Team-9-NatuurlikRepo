@inject NavigationManager NavigationManager


@if (Supplier != null)
{
    <tr>
        <td>@Supplier.CompanyName</td>
        <td>@Supplier.EmailAddress</td>
        <td>@Supplier.PhoneNumber</td>
       
        <td>
            <button type="submit" class="btn btn-success" @onclick="@(()=> SendSupplierOrder(Supplier.Id))"><i class="bi bi-plus-square"></i>&nbsp; Request Inventories</button>                      
        </td>
    </tr>    
}


@code {

    [Parameter]
    public Supplier? Supplier { get; set; }

    [Parameter]
    public EventCallback OnPageLoad { get; set; }

    private void SendSupplierOrder(int supplierId)
    {
        NavigationManager.NavigateTo($"SendSupplierOrder/{supplierId}", true);
    }


}
