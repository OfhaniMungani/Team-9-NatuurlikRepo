@page "/products"
@using NatuurlikBase.Components
@using NatuurlikBase.Repository.IRepository



@inject NavigationManager NavigationManager
@inject IViewProductsByName ViewProductsByName

@code {
      private async Task LoadProducts()
    {
        var prods = await ViewProductsByName.ExecuteAsync();
        this.productsList = prods.ToList();
    }
}

<h3>Products List</h3>
<br/>

<ViewProductsComponent OnSearchProducts="OnSearchProducts"></ViewProductsComponent>

@if (productsList != null)
{
    <table class="table">
        <thead>
            <tr>
                <th>Name</th>
                <th>Quantity</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in this.productsList)
            {
                <ProductItemComponent 
                    Product="product"
                    OnProductDeleted="OnProductDeleted"></ProductItemComponent>
            }
        </tbody>
    </table>    
}
<br/>
